/**
 * Register Widgets.
 *
 * @since 2.3.0
 */
function {FILE_NAME_PREFIX}_register_widgets() {
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Cart' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Layered_Nav_Filters' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Layered_Nav' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Price_Filter' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Product_Categories' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Product_Search' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Product_Tag_Cloud' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Products' );
	register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Recently_Viewed' );

	if ( 'yes' === get_option( '{PLUGIN_HOOK_CLASS_NAME}_enable_reviews', 'yes' ) ) {
		register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Top_Rated_Products' );
		register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Recent_Reviews' );
		register_widget( '{PLUGIN_CLASS_PREFIX}_Widget_Rating_Filter' );
	}
}
add_action( 'widgets_init', '{FILE_NAME_PREFIX}_register_widgets' );
