class {PLUGIN_CLASS_PREFIX}_API extends {PLUGIN_CLASS_PREFIX}_Legacy_API {

	/**
	 * Setup class.
	 * @since {VERSION}
	 */
	public function __construct() {
		parent::__construct();

		// Add query vars.
		add_filter( 'query_vars', array( $this, 'add_query_vars' ), 0 );

		// Register API endpoints.
		add_action( 'init', array( $this, 'add_endpoint' ), 0 );

		// Handle {FILE_NAME_PREFIX}-api endpoint requests.
		add_action( 'parse_request', array( $this, 'handle_api_requests' ), 0 );

		// Ensure payment gateways are initialized in time for API requests.
		add_action( '{PLUGIN_HOOK_CLASS_NAME}_api_request', array( '{PLUGIN_CLASS_PREFIX}_Payment_Gateways', 'instance' ), 0 );

		// WP REST API.
		$this->rest_api_init();
	}

	/**
	 * Add new query vars.
	 *
	 * @since {VERSION}
	 * @param array $vars
	 * @return string[]
	 */
	public function add_query_vars( $vars ) {
		$vars   = parent::add_query_vars( $vars );
		$vars[] = '{FILE_NAME_PREFIX}-api';
		return $vars;
	}

	/**
	 * {PLUGIN_CLASS_PREFIX} API for payment gateway IPNs, etc.
	 * @since {VERSION}
	 */
	public static function add_endpoint() {
		parent::add_endpoint();
		add_rewrite_endpoint( '{FILE_NAME_PREFIX}-api', EP_ALL );
	}

	/**
	 * API request - Trigger any API requests.
	 *
	 * @since {VERSION}
	 * @version  {VERSION}
	 */
	public function handle_api_requests() {
		global $wp;

		if ( ! empty( $_GET['{FILE_NAME_PREFIX}-api'] ) ) {
			$wp->query_vars['{FILE_NAME_PREFIX}-api'] = $_GET['{FILE_NAME_PREFIX}-api'];
		}

		// {FILE_NAME_PREFIX}-api endpoint requests.
		if ( ! empty( $wp->query_vars['{FILE_NAME_PREFIX}-api'] ) ) {

			// Buffer, we won't want any output here.
			ob_start();

			// No cache headers.
			nocache_headers();

			// Clean the API request.
			$api_request = strtolower( {FILE_NAME_PREFIX}_clean( $wp->query_vars['{FILE_NAME_PREFIX}-api'] ) );

			// Trigger generic action before request hook.
			do_action( '{PLUGIN_HOOK_CLASS_NAME}_api_request', $api_request );

			// Is there actually something hooked into this API request? If not trigger 400 - Bad request.
			status_header( has_action( '{PLUGIN_HOOK_CLASS_NAME}_api_' . $api_request ) ? 200 : 400 );

			// Trigger an action which plugins can hook into to fulfill the request.
			do_action( '{PLUGIN_HOOK_CLASS_NAME}_api_' . $api_request );

			// Done, clear buffer and exit.
			ob_end_clean();
			die( '-1' );
		}
	}

	/**
	 * Init WP REST API.
	 * @since {VERSION}
	 */
	private function rest_api_init() {
		// REST API was included starting WordPress 4.4.
		if ( ! class_exists( 'WP_REST_Server' ) ) {
			return;
		}

		$this->rest_api_includes();

		// Init REST API routes.
		add_action( 'rest_api_init', array( $this, 'register_rest_routes' ), 10 );
	}

