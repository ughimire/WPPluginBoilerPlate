	/**
	 * Register {PLUGIN_CLASS_PREFIX} settings from WP-API to the REST API.
	 * @since {VERSION}
	 */
	public function register_wp_admin_settings() {
		$pages = {PLUGIN_CLASS_PREFIX}_Admin_Settings::get_settings_pages();
		foreach ( $pages as $page ) {
			new {PLUGIN_CLASS_PREFIX}_Register_WP_Admin_Settings( $page, 'page' );
		}

		$emails = {PLUGIN_CLASS_PREFIX}_Emails::instance();
		foreach ( $emails->get_emails() as $email ) {
			new {PLUGIN_CLASS_PREFIX}_Register_WP_Admin_Settings( $email, 'email' );
		}
	}

