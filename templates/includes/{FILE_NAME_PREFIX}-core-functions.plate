/**
 * Get the customer's default location.
 *
 * Filtered, and set to base location or left blank. If cache-busting,
 * this should only be used when 'location' is set in the querystring.
 *
 * @since {VERSION}
 * @return array
 */
function {FILE_NAME_PREFIX}_get_customer_default_location() {
	$location = array();

	switch ( get_option( '{PLUGIN_HOOK_CLASS_NAME}_default_customer_address' ) ) {
		case 'geolocation_ajax' :
		case 'geolocation' :
			// Exclude common bots from geolocation by user agent.
			$ua = {FILE_NAME_PREFIX}_get_user_agent();

			if ( ! strstr( $ua, 'bot' ) && ! strstr( $ua, 'spider' ) && ! strstr( $ua, 'crawl' ) ) {
				$location = {PLUGIN_CLASS_PREFIX}_Geolocation::geolocate_ip( '', true, false );
			}

			// Base fallback.
			if ( empty( $location['country'] ) ) {
				$location = {FILE_NAME_PREFIX}_format_country_state_string( apply_filters( '{PLUGIN_HOOK_CLASS_NAME}_customer_default_location', get_option( '{PLUGIN_HOOK_CLASS_NAME}_default_country' ) ) );
			}
		break;
		case 'base' :
			$location = {FILE_NAME_PREFIX}_format_country_state_string( apply_filters( '{PLUGIN_HOOK_CLASS_NAME}_customer_default_location', get_option( '{PLUGIN_HOOK_CLASS_NAME}_default_country' ) ) );
		break;
		default :
			$location = {FILE_NAME_PREFIX}_format_country_state_string( apply_filters( '{PLUGIN_HOOK_CLASS_NAME}_customer_default_location', '' ) );
		break;
	}

	return apply_filters( '{PLUGIN_HOOK_CLASS_NAME}_customer_default_location_array', $location );
}

