 *
 * @since {VERSION}
 * @param  string $country_string
 * @return array
 */
function {FILE_NAME_PREFIX}_format_country_state_string( $country_string ) {
	if ( strstr( $country_string, ':' ) ) {
		list( $country, $state ) = explode( ':', $country_string );
